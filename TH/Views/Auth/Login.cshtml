@model TH.Models.LoginModel

@{
    Layout = "_RootNavFoot";
    ViewData["Title"] = "Login Page";
}
<link href="/css/nav_login.css" rel="stylesheet">
<main class="form-signin text-center">
    <form asp-action="Login">
        <img class="mb-4" src="https://www.computerhope.com/jargon/b/bootstrap.png" alt="" width="72" height="57">
        <h1 class="h3 mb-3 fw-normal">Sign in</h1>
        <div class="form-floating">
            <input type="email" asp-for="Email" class="form-control" id="floatingInput" placeholder="name@example.com">
            <label for="floatingInput">Email address</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input type="password" asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Password</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Login</button>
        <p class="mt-5 mb-3 text-muted">&copy; 2017–2021</p>
    </form>
</main>

